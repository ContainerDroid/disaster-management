<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skbuf.datagenerator.SettingsFragment">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <GridLayout
            android:layout_marginTop="10dp"
            android:id="@+id/grid_circles"
            android:layout_weight="30"
            android:columnCount="4"
            android:rowCount="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_circle"/>

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnWeight="4"
                android:layout_row="0"
                android:layout_column="1"
                android:text="safety"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blue_circle"/>

            <TextView
                android:layout_rowWeight="1"
                android:layout_columnWeight="4"
                android:layout_row="0"
                android:layout_column="3"
                android:text="proximity"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/red_circle"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="4"
                android:layout_row="1"
                android:layout_column="1"
                android:text="not crowded"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yellow_circle"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="4"
                android:layout_row="1"
                android:layout_column="3"
                android:text="closer to friends"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </GridLayout>

        <ListView
            android:layout_below="@+id/grid_circles"
            android:id="@+id/pref_list"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        </ListView>

    </RelativeLayout>
</FrameLayout>
