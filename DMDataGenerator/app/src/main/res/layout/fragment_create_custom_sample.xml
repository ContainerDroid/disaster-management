<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skbuf.datagenerator.CreateCustomSampleFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/grid"
            android:layout_weight="6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="@string/button_create_save"
                android:id="@+id/button_create_save"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <Button
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="@string/button_create_browse"
                android:id="@+id/button_create_browse"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <Switch
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Apply Global offset"
                android:layout_marginLeft="10dp"
                android:id="@+id/swith_offset"/>


            <EditText
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="offset"
                android:inputType="numberDecimal"
                android:enabled="false"
                android:textAlignment="center" />

        </GridLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <ListView
            android:layout_below="@id/grid"
            android:id="@+id/list"
            android:focusable="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">



        </ListView>
    </LinearLayout>

</FrameLayout>
